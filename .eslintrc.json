{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "standard-with-typescript",
        "prettier"
    ],
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaFeatures": {
            "modules": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}